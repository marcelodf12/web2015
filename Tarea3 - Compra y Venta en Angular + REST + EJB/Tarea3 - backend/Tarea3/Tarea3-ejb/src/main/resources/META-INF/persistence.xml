<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="Tarea3Ejb">
    <jta-data-source>java:jboss/datasources/webDS</jta-data-source>
    <class>py.pol.una.web.tarea3.modelos.Cliente</class>
    <class>py.pol.una.web.tarea3.modelos.Compra</class>
    <class>py.pol.una.web.tarea3.modelos.CompraDetalle</class>
    <class>py.pol.una.web.tarea3.modelos.Producto</class>
    <class>py.pol.una.web.tarea3.modelos.Proveedor</class>
    <class>py.pol.una.web.tarea3.modelos.Factura</class>
    <class>py.pol.una.web.tarea3.modelos.Venta</class>
    <class>py.pol.una.web.tarea3.modelos.VentaDetalle</class>
    <properties>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>      
      <property name="hibernate.default_schema" value="public"/>
    </properties>
  </persistence-unit>
</persistence>